<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="15sp"
    android:layout_marginLeft="15sp"
    tools:context=".BikeActivity">


    <TextView
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Here !!"
        android:textSize="20sp"
        android:textColor="#800000"
        android:gravity="center"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/bfullname"
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Full Name"

        />


    <EditText
        android:id="@+id/bcontact"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter Your Contact Number"

        />


    <TextView
        android:id="@+id/vehiclebrand"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Bike Brand"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/bvehiclemodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Bike Model "

        />

    <EditText
        android:id="@+id/bvehiclenum"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Bike Number "

        />

    <TextView
        android:id="@+id/date"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date and Time"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/btnbdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Select Date "
        android:textColorHint="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">




        <Button
            android:id="@+id/btnbtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Select Time "
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btnetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Select Time "
            android:textColorHint="#000000" />


    </LinearLayout>

    <Button
        android:id="@+id/btnbbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:hint="Book Now"
        android:textColorHint="#800000"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_marginTop="15sp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Note: Parking cost per hour is R.s 60 "
        android:layout_height="wrap_content"/>

</LinearLayout>